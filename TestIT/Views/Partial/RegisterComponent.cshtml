@using TestIT.ViewModels
@using TestIT.ViewModels.Account
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *,TestIT
@model RegisterViewModel

<div class="jumbotron center-block">
    <h2>Register</h2>
    <h4>Create a new account.</h4>
    <hr />
    <div *ngIf="registerViewModel != null">
        <form role="form" #testForm="ngForm" class="form-horizontal">
            <hfdi for="Email"></hfdi>
            <hfdi for="Password"></hfdi>
            <hfdi for="ConfirmPassword"></hfdi>
            <div class="form-group row">
                <div class="col-md-offset-2 col-md-10">
                    <button type="button" (click)="register($event)" class="btn btn-secondary">Register</button>
                </div>
            </div>
            <span class="small">Already registered? <a [routerLink]="['login']"> Click here to Login</a></span>
        </form>
    </div>
</div>

<div *ngIf="errorMessage != null">
    <p>Error:</p>
    <pre>{{ errorMessage  }}</pre>
</div>
</div>